section.l-pricing
    .block-title.row
        h2 Pricing
        
    .row.list-item
        .columns.medium-4
            .item.wow.fadeInUp(data-wow-duration="1.0s", data-wow-delay="0.5s")
                .top
                    h4 Any solution solution
                .middle
                    p.title Price
                    p <strong>25</strong> <span>BTC</span>
                    p <span>1% success fee</span>
                    p.or or
                .bottom
                    p.title Bonus
                    p.text Discount up to
                    p.price <strong>250</strong> <span>BTC</span>
                    
        .columns.medium-4
            .item.special.wow.fadeInUp(data-wow-duration="1.0s", data-wow-delay="0.6s")
                .top
                    h4 Full package
                .middle
                    p.title Price
                    p <strong>50</strong> <span>BTC</span>
                    p <span>3% success fee</span>
                    p.or or
                .bottom
                    p.title Bonus
                    p.text Discount up to
                    p.price <strong>500</strong> <span>BTC</span>
                    
        .columns.medium-4
            .item.wow.fadeInUp(data-wow-duration="1.0s", data-wow-delay="0.7s")
                .top
                    h4 Any 2 solution
                .middle
                    p.title Price
                    p <strong>40</strong> <span>BTC</span>
                    p <span>2% success fee</span>
                    p.or or
                .bottom
                    p.title Bonus
                    p.text Discount up to
                    p.price <strong>400</strong> <span>BTC</span>
        
